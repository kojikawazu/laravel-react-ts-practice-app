{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "sourceMap": true,
        "paths": {
            "@/*": ["./resources/js/*"],
            "ziggy-js": ["./vendor/tightenco/ziggy"]
        },
        "types": [
            "vite/client",
            "vitest/globals",
            "@testing-library/jest-dom"
        ],
        "skipLibCheck": true,
        "resolveJsonModule": true
    },
    "include": [
        "resources/js/**/*.ts", 
        "resources/js/**/*.tsx", 
        "resources/js/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}
